<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="@dimen/startpage_button_text_fontsize"
        android:text="@string/endpage_labeltext">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:id="@+id/scoreView"
        android:textSize="@dimen/endpage_score_text_fontsize">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/playAgainButton"
                android:layout_margin="@dimen/endpage_button_margin"
                android:text="@string/endpage_button_text_playagain">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/endButton"
                android:layout_margin="@dimen/endpage_button_margin"
                android:text="@string/endpage_button_text_end">
            </Button>
    </LinearLayout>

</LinearLayout>
